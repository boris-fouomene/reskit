{
  "name": "reskit",
  "version": "1.0.0",
  "description": "An innovative TypeScript framework that empowers developers to build applications with a fully decorator-based architecture for efficient resource management. By combining the power of decorators with a resource-oriented design, DecorRes enhances code clarity, modularity, and maintainability.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-all": "npx lerna run build",
    "clean": "npx rimraf dist",
    "start1": "lerna run --parallel watch",
    "build-publish": "npm run build && npm publish --access public",
    "clear-npx-cache": "npx clear-npx-cache",
    "publish-all": "lerna publish",
    "test": "npm run build-test && npm run start-test",
    "start-test": "node ./dist/test/index",
    "build-test": "tsc --project tsconfig.test.json && tsc-alias -p tsconfig.test.json",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build1": "npm run clean && npx tsc -p tsconfig.declaration.json && npx tsc -p tsconfig.json",
    "prestart1": "npm run build",
    "start": "node dist/test/index"
  },
  "keywords": [
    "TypeScript",
    "Decorators",
    "Modular",
    "Architecture",
    "Extensible",
    "Framework",
    "Custom",
    "Field",
    "Types",
    "Type",
    "Safety",
    "API",
    "Development",
    "Code",
    "Organization",
    "Application",
    "Scalability",
    "Dynamic",
    "Ecosystem",
    "Clean",
    "Code",
    "Object-Oriented",
    "Programming",
    "Developer-Friendly",
    "Open",
    "Source"
  ],
  "author": "Boris Fouomene",
  "npmClient": "npm",
  "useWorkspaces": true,
  "devDependencies": {
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.7.4",
    "@types/qs": "^6.9.16",
    "@types/react": "^18.3.11",
    "@types/react-is": "^18.3.0",
    "react": "^18.3.1",
    "react-fast-compare": "^3.2.2",
    "reflect-metadata": "^0.2.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.2",
    "lerna": "^8.1.8"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "qs": "^6.13.0",
    "react-is": "^18.3.1",
    "stable-hash": "^0.0.4"
  }
}
