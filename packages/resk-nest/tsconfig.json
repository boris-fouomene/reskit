{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "node",
    "paths": {
      "@esource/*": [
        "./src/modules/esource/*"
      ],
      "@esource": [
        "./src/modules/esource"
      ],
      "@i18n/*": [
        "./src/modules/i18n/*"
      ],
      "@i18n": [
        "./src/modules/i18n"
      ],
      "@auth/*": [
        "./src/modules/auth/*"
      ],
      "@auth": [
        "./src/modules/auth"
      ],
      "@resources/*": [
        "./src/modules/resource/*"
      ],
      "@resources": [
        "./src/modules/resource"
      ],
      "@typeorm/*": [
        "./src/modules/typeorm/*"
      ],
      "@typeorm": [
        "./src/modules/typeorm"
      ],
      "@mongoose/*": [
        "./src/modules/mongoose/*"
      ],
      "@mongoose": [
        "./src/modules/mongoose"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@examples/*": [
        "./src/examples/*"
      ],
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "../packages/resk-expo/**/*",
    "../packages/resk-expo-docs/**/*",
    "**/*.tsx"
  ],
}