{
  "name": "reskit",
  "version": "1.0.1",
  "description": "An innovative TypeScript framework that empowers developers to build applications with a fully decorator-based architecture for efficient resource management. By combining the power of decorators with a resource-oriented design, DecorRes enhances code clarity, modularity, and maintainability.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "workspaces": [
    "packages/*",
    "types/*",
    "examples/*"
  ],
  "packageManager": "npm@11.2.0",
  "scripts": {
    "install-nextjs": "npm i && cd ./packages/resk-core && npm i && cd ../resk-nativewind && npm i && cd ../../examples/resk-nativewind-next && npm i",
    "build-nextjs": "cd ./packages/resk-core && npm run build && cd ../resk-nativewind && npm run build && cd ../../examples/resk-nativewind-next && npm run build",
    "postinstall": "npm run install:packages",
    "install:packages": "lerna exec -- npm install",
    "clean:install": "lerna clean --yes && npm install && npm run install:packages",
    "build": "lerna run build --stream",
    "build:core": "lerna run build --scope=@resk/core --stream",
    "build:nativewind": "lerna run build --scope=@resk/nativewind --stream", 
    "build:nest": "lerna run build --scope=@resk/nest --stream",
    "build:watch": "lerna run build --parallel --stream -- --watch",
    "test": "lerna run test --stream",
    "test:core": "lerna run test --scope=@resk/core --stream",
    "test:nest": "lerna run test --scope=@resk/nest --stream",
    "lint": "lerna run lint --stream",
    "lint:nativewind": "lerna run lint --scope=@resk/nativewind --stream",
    "lint:nest": "lerna run lint --scope=@resk/nest --stream",
    "clean": "lerna run clean --parallel && npx rimraf build",
    "clean:core": "lerna run clean --scope=@resk/core",
    "clean:nativewind": "lerna run clean --scope=@resk/nativewind",
    "clean:nest": "lerna run clean --scope=@resk/nest",
    "prerelease": "npm run build && npm run test && npm run lint",
    "release": "lerna publish --conventional-commits --create-release github",
    "release:patch": "lerna publish patch --conventional-commits --create-release github",
    "release:minor": "lerna publish minor --conventional-commits --create-release github", 
    "release:major": "lerna publish major --conventional-commits --create-release github",
    "release:canary": "lerna publish --canary --conventional-commits --preid canary",
    "release:beta": "lerna publish --conventional-prerelease --preid beta --create-release github",
    "version": "lerna version --conventional-commits --create-release github",
    "version:patch": "lerna version patch --conventional-commits",
    "version:minor": "lerna version minor --conventional-commits",
    "version:major": "lerna version major --conventional-commits",
    "changelog": "lerna-changelog",
    "changelog:core": "lerna-changelog --scope=@resk/core",
    "changelog:nativewind": "lerna-changelog --scope=@resk/nativewind", 
    "changelog:nest": "lerna-changelog --scope=@resk/nest",
    "changelog:unreleased": "lerna-changelog --unreleased",
    "publish": "lerna publish from-git --yes",
    "publish:canary": "lerna publish from-git --canary --yes",
    "install-vercel": "npm i && cd examples/resk-expo-docs && npm i && cd ../../packages/resk-core && npm i && cd ../resk-native && npm i",
    "build-vercel": "cd examples/resk-expo-docs && npm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "version-packages": "changeset version && npm install --package-lock-only",
    "check-updates": "npx npm-check-updates",
    "document": "npx ts-node ./generate-typedoc.ts",
    "clear-npx-cache": "npx clear-npx-cache",
    "test:watch": "jest --watch",
    "test-node": "npm run build && node ./build/test/index.js",
    "start": "node build/test/index",
    "prepublish1": "npm run build",
    "build-doc": "npx typedoc"
  },
  "keywords": [
    "TypeScript",
    "Decorators",
    "Modular",
    "Architecture",
    "Extensible",
    "Framework",
    "Custom",
    "Field",
    "Types",
    "Type",
    "Safety",
    "API",
    "Development",
    "Code",
    "Organization",
    "Application",
    "Scalability",
    "Dynamic",
    "Ecosystem",
    "Clean",
    "Code",
    "Object-Oriented",
    "Programming",
    "Developer-Friendly",
    "Open",
    "Source"
  ],
  "author": "Boris Fouomene",
  "npmClient": "npm",
  "useWorkspaces": true,
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "concurrently": "^9.1.0",
    "jest": "^29.7.0",
    "lerna": "^8.1.8",
    "lerna-changelog": "^2.2.0",
    "ts-jest": "^29.2.5",
    "ts-patch": "^3.2.1",
    "typedoc": "^0.27.9",
    "typescript": "^5.8.2"
  }
}