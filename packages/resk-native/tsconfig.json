{
  "compilerOptions": {
    "baseUrl": "./",
    // Remove rootDir to prevent src folder creation in output
    // "rootDir": "./",
    "outDir": "./build",
    // Comments handling
    "removeComments": false,
    "declaration": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-native",
    "target": "ES2015", // Or the desired target
    "module": "ES6", // Enables ESM & CJS interop
    "moduleResolution": "node",
    // Performance optimizations
    "incremental": false,
    "noEmitOnError": false,
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "isolatedModules": false,
    "disableSourceOfProjectReferenceRedirect": true,
    "preserveSymlinks": true,
    "plugins": [
      // Transform paths in output .js files
      {
        "transform": "typescript-transform-paths"
      },
      // Transform paths in output .d.ts files (Include this line if you output declarations files)
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      },
    ],
    // Paths remain the same
    "paths": {
      "@breakpoints/*": [
        "src/breakpoints/*"
      ],
      "@breakpoints": [
        "src/breakpoints"
      ],
      "@dimensions/*": [
        "src/dimensions/*"
      ],
      "@dimensions": [
        "src/dimensions"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@colors/*": [
        "src/theme/colors/*"
      ],
      "@colors": [
        "src/theme/colors"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@theme": [
        "src/theme"
      ],
      "@auth/*": [
        "src/auth/*"
      ],
      "@auth": [
        "src/auth"
      ],
      "@platform/*": [
        "src/platform/*"
      ],
      "@platform": [
        "src/platform"
      ],
      "@notify/*": [
        "src/notify/*"
      ],
      "@notify": [
        "src/notify"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "react-native": [
        "../../examples/resk-expo-docs/node_modules/react-native"
      ],
      "react-native-svg": [
        "../../examples/resk-expo-docs/node_modules/react-native-svg"
      ],
      "expo-sqlite/*": [
        "../../examples/resk-expo-docs/node_modules/expo-sqlite/*"
      ]
    },
  },
  "references": [
    {
      "path": "../../types/resk-native-icons"
    }
  ],
  // Include what you need - change as needed
  "include": [
    "src/**/*",
  ],
  // Improved exclude patterns
  "exclude": [
    "node_modules",
    "@resk/core",
    "@resk/core/utils",
    "@resk/core/*",
    "@resk/*",
    "../../packages/resk-core/**/*",
    "../resk-core/**/*",
    "../../node_modules/**/*",
    "../../examples/**/*",
    "react-native",
    "react-native-svg",
    "react-native-vector-icons/**/*",
    "../dist/**/*",
    "../build/**/*",
    "docs/**/*"
  ],
}