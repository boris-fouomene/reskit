{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".", // TypeScript source directory
    "outDir": "./build",
    "paths": {
      "@reskit/*": [
        "@resk/core/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@react/*": [
        "src/react/*"
      ],
      "@session/*": [
        "src/session/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "tests/**/*.tsx",
    "tests/**/*.ts"
  ]
}