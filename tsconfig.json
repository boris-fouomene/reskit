{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".", // TypeScript source directory
    "outDir": "./dist",
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS", // Use commonjs module system
    "experimentalDecorators": true, // Enable experimental support for decorators
    "emitDecoratorMetadata": true, // Enable emitting design:type metadata
    "strict": true, // Enable all strict type checking options
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": true, // Compatibility with ES module imports
    //"sourceMap": true,
    "declaration": true,
    "declarationMap": true, // Generates .d.ts.map files (optional)
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "ts-paths-to-vite-alias.mjs"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/*.spec.ts",
    "**/build/**/*"
  ]
}