{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./build",
        "target": "ESNext", // Or the desired target
        "module": "ESNext", // Output CommonJS modules
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": false,
        "declarationMap": false,
        "incremental": false,
        "paths": {
            "@logger": [
                "src/logger"
            ],
            "@countries/*": [
                "src/countries/*"
            ],
            "@countries": [
                "src/countries"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@react/*": [
                "src/react/*"
            ],
            "@session/*": [
                "src/session/*"
            ],
            "@fields/*": [
                "src/fields/*"
            ],
            "@resources/*": [
                "src/resources/*"
            ],
            "@/*": [
                "src/*"
            ],
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
    ],
    "exclude": [
        "build/**/*",
        "node_modules/**/*",
        "../node_modules/**/*",
        "jest.config.*",
        "../../jest.config.*",
    ]
}