{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "commonjs",
    "composite": false,
    "incremental": false,
    "paths": {
      "@resource/*": [
        "./src/modules/resource/*"
      ],
      "@resource": [
        "./src/modules/resource"
      ],
      "@i18n/*": [
        "./src/modules/i18n/*"
      ],
      "@i18n": [
        "./src/modules/i18n"
      ],
      "@auth/*": [
        "./src/modules/auth/*"
      ],
      "@auth": [
        "./src/modules/auth"
      ],
      "@typeorm/*": [
        "./src/modules/typeorm/*"
      ],
      "@typeorm": [
        "./src/modules/typeorm"
      ],
      "@mongoose/*": [
        "./src/modules/mongoose/*"
      ],
      "@mongoose": [
        "./src/modules/mongoose"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@examples/*": [
        "./src/examples/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "../packages/resk-expo/**/*",
    "../packages/resk-expo-docs/**/*",
    "**/*.tsx"
  ]
}