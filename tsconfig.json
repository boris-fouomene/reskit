{
  "compilerOptions": {
    //"baseUrl": ".",
    //"rootDir": ".",
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "resolveJsonModule": true,
    "noLib": false,
    "noEmitOnError": true,
    "importHelpers": false,
    "noEmitHelpers": true,
    "noEmit": false,
    "target": "ES2015", // Or the desired target
    "module": "NodeNext", // Enables ESM & CJS interop
    "moduleResolution": "NodeNext", // Ensures Node-style resolution
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "declarationMap": false,
    "incremental": false,
    "composite": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/tsup"
    ],
    "types": [
      "jest",
      "node"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "ts-paths-to-vite-alias.mjs",
    "packages/resk-tamagui/vite.config.mjs",
    "jest.config.js",
    "packages/resk-core/jest.config.js",
    "packages/resk-nest/src/locales/common.js",
    "packages/resk-core/jest.config.n.js"
  ],
  "exclude": [
    "./jest.config.js",
    "**/node_modules/**/*",
    "node_modules/**/*",
    "**/dist/**/*",
    "**/build/**/*",
    "./node_modules/@resk/**/*",
    "@resk/**/*",
    "**/dist/*",
    "**/*.spec.ts",
    "**/build/**/*",
    "jest.config.*",
    "generate-typedoc",
    "**.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx"
  ],
  //"extends": "expo/tsconfig.base"
}