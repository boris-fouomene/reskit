{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".", // TypeScript source directory
    "outDir": "./build",
    "target": "ES6", // Specifies the ECMAScript target version
    "module": "ES6", // Use ES6 module syntax (e.g., `import`/`export`)
    "moduleResolution": "node", // Resolve modules using Node.js style
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Enable experimental support for decorators
    "emitDecoratorMetadata": true, // Enable emitting design:type metadata
    "strict": true, // Enable all strict type checking options
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    //"module": "NodeNext",
    "esModuleInterop": true, // Compatibility with ES module imports
    //"sourceMap": true,
    "declaration": true,
    "declarationMap": true, // Generates .d.ts.map files (optional)
    "jsx": "react-jsx", // Set the JSX code generation
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "ts-paths-to-vite-alias.mjs",
    "packages/resk-tamagui/vite.config.mjs"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/*.spec.ts",
    "**/build/**/*"
  ]
}