{
  "compilerOptions": {
    "target": "ES2021", // Or the desired target
    "module": "ES6", // Output CommonJS modules
    "removeComments": true,
    "moduleResolution": "node", // Resolve modules using Node.js style
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Enable experimental support for decorators
    "emitDecoratorMetadata": true, // Enable emitting design:type metadata
    "strict": true, // Enable all strict type checking options
    "resolveJsonModule": true,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types"
    ], // Ensure Jest typings are included
    "types": [
      "jest",
      "node"
    ],
    "skipLibCheck": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    //"module": "NodeNext",
    "esModuleInterop": true, // Compatibility with ES module imports
    //"sourceMap": true,
    "declaration": true,
    "declarationMap": true, // Generates .d.ts.map files (optional)
    "jsx": "react-jsx", // Set the JSX code generation
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
  },
}