{
  "extends": "expo/tsconfig.base",
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescriptreact"
  },
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx", // Use the new JSX transform
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true
  }
}