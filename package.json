{
  "name": "reskit",
  "version": "1.0.1",
  "description": "An innovative TypeScript framework that empowers developers to build applications with a fully decorator-based architecture for efficient resource management. By combining the power of decorators with a resource-oriented design, DecorRes enhances code clarity, modularity, and maintainability.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-all": "npx lerna run build",
    "clean": "npx rimraf build",
    "publish": "lerna publish --yes",
    "publish-all": "lerna publish",
    "document": "npx ts-node ./generate-typedoc.ts",
    "clear-npx-cache": "npx clear-npx-cache",
    "test": "npm run build && npx vitest",
    "test-node": "npm run build && node ./build/test/index.js",
    "build": "tsc && npx tsc-alias -p tsconfig.json",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"npx tsc-alias -w\")",
    "start": "node build/test/index",
    "prepublish": "npm run build",
    "build-doc": "npx typedoc"
  },
  "keywords": [
    "TypeScript",
    "Decorators",
    "Modular",
    "Architecture",
    "Extensible",
    "Framework",
    "Custom",
    "Field",
    "Types",
    "Type",
    "Safety",
    "API",
    "Development",
    "Code",
    "Organization",
    "Application",
    "Scalability",
    "Dynamic",
    "Ecosystem",
    "Clean",
    "Code",
    "Object-Oriented",
    "Programming",
    "Developer-Friendly",
    "Open",
    "Source"
  ],
  "author": "Boris Fouomene",
  "npmClient": "npm",
  "useWorkspaces": true,
  "devDependencies": {
    "ts-alias": "^0.0.7",
    "ts-patch": "^3.2.1",
    "tsconfig-paths": "^4.2.0",
    "ttypescript": "^1.5.15",
    "typescript": "^5.6.3"
  }
}
