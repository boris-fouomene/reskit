{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".", // TypeScript source directory
    "outDir": "./build",
    "target": "ES2021", // Or the desired target
    "module": "ESNext", // Output CommonJS modules
    "removeComments": true,
    "moduleResolution": "node", // Resolve modules using Node.js style
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Enable experimental support for decorators
    "emitDecoratorMetadata": true, // Enable emitting design:type metadata
    "strict": true, // Enable all strict type checking options
    "resolveJsonModule": true,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types"
    ], // Ensure Jest typings are included
    "types": [
      "jest",
      "node"
    ],
    "skipLibCheck": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    //"module": "NodeNext",
    "esModuleInterop": true, // Compatibility with ES module imports
    //"sourceMap": true,
    "declaration": true,
    "declarationMap": true, // Generates .d.ts.map files (optional)
    "jsx": "react-jsx", // Set the JSX code generation
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "ts-paths-to-vite-alias.mjs",
    "packages/resk-tamagui/vite.config.mjs",
    "jest.config.js",
    "packages/resk-core/jest.config.js",
    "packages/resk-nest/src/locales/common.js"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/*.spec.ts",
    "**/build/**/*",
    "jest.config.*",
    "generate-typedoc",
    "**.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx"
  ]
}