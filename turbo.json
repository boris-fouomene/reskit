{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "tsconfig.json"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "build/**",
                "dist/**"
            ],
            "cache": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "test/**/*.ts",
                "test/**/*.tsx"
            ],
            "cache": true
        },
        "build:watch": {
            "cache": false,
            "persistent": true
        }
    }
}