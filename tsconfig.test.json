{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist", // Output directory for built test files
    "rootDir": "./", // Root directory for test files
    "noEmitOnError": true, // Prevent emitting files if there are errors
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "jest",
      "vitest"
    ] // Include node and jest types for testing
  },
  "include": [
    "./tests/**/*.ts"
  ],
}