{
    "name": "@resk/core",
    "version": "1.4.1",
    "description": "An innovative TypeScript framework that empowers developers to build applications with a fully decorator-based architecture for efficient resource management. By combining the power of decorators with a resource-oriented design, DecorRes enhances code clarity, modularity, and maintainability.",
    "main": "build/esm/index",
    "types": "build/esm/index.d.ts",
    "exports": {
        ".": {
            "import": "./build/esm/index.js",
            "require": "./build/cjs/index.js"
        }
    },
    "scripts": {
        "clear-npx-cache": "npx clear-npx-cache",
        "pretest": "npm run build-test",
        "build-test": "tsc --project ./tsconfig.test.json && npx tsc-alias -p tsconfig.test.json",
        "test": "npx jest",
        "build": "npm run build:esm && npm run build:cjs",
        "build:cjs": "tsc -p tsconfig.cjs.json && npx tsc-alias -p tsconfig.cjs.json",
        "build:esm": "tsc -p tsconfig.esm.json && npx tsc-alias -p tsconfig.esm.json",
        "test-node": "npm run build && node ./build/test/index.js",
        "start": "node build/test/index",
        "prepublish": "npm run build",
        "build-doc": "npx typedoc",
        "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
        "dev": "npx concurrently \"tsc --watch\" \"npx tsc-alias -p tsconfig.json\""
    },
    "devDependencies": {
        "@types/crypto-js": "^4.2.2",
        "@types/dotenv": "^6.1.1",
        "@types/lodash": "^4.17.14",
        "@types/node": "^22.10.7",
        "@types/qs": "^6.9.18",
        "copyfiles": "^2.4.1",
        "dotenv": "^16.4.7",
        "lerna": "^8.1.9",
        "openai": "^4.79.4",
        "reflect-metadata": "^0.2.2",
        "ts-alias": "^0.0.7",
        "ts-jest": "^29.2.5",
        "typedoc": "^0.27.6",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "dependencies": {
        "crypto-js": "^4.2.0",
        "i18n-js": "^4.5.1",
        "libphonenumber-js": "^1.11.19",
        "lodash": "^4.17.21",
        "moment": "^2.30.1",
        "qs": "^6.14.0",
        "stable-hash": "^0.0.4"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "TypeScript",
        "Decorators",
        "Modular",
        "Architecture",
        "Extensible",
        "Framework",
        "Custom",
        "Field",
        "Types",
        "Type",
        "Safety",
        "API",
        "Development",
        "Code",
        "Organization",
        "Application",
        "Scalability",
        "Dynamic",
        "Ecosystem",
        "Clean",
        "Code",
        "Object-Oriented",
        "Programming",
        "Developer-Friendly",
        "Open",
        "Source"
    ],
    "author": "Boris Fouomene",
    "npmClient": "npm"
}