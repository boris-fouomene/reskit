{
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Allow interoperability with CommonJS modules
    "allowJs": true,
    "resolveJsonModule": false,
    "target": "ES2015", // Or the desired target
    "module": "ES6", // Enables ESM & CJS interop
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "declarationMap": false,
    "incremental": false,
    "composite": false,
    "strict": true,
    "noEmitOnError": true,
    "noEmit": false,
    "noLib": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
  },
  "types": [
    "jest",
    "node",
    "react-native",
    "react",
  ],
  "exclude": [
    "react-native",
    "node_modules",
    "node_modules/**/*",
    "@resk/core/**/*",
    "docs/**/*",
    "examples/**/*",
    "**/build/**/*",
    "**/dist/**/*",
    "**/*.js",
  ],
}