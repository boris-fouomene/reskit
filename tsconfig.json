{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".", // TypeScript source directory
    "outDir": "./build",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "ts-paths-to-vite-alias.mjs",
    "packages/resk-tamagui/vite.config.mjs",
    "jest.config.js",
    "packages/resk-core/jest.config.js"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/dist/*",
    "**/*.spec.ts",
    "**/build/**/*",
    "jest.config.*",
    "generate-typedoc",
    "**.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
  ]
}