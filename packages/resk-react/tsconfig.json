{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".", // TypeScript source directory
    "outDir": "./dist",
    "traceResolution": true,
    "paths": {
      "@utils/*": [
        "src/utils/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@react/*": [
        "src/react/*"
      ],
      "@react": [
        "src/react"
      ],
      "@session": [
        "src/session"
      ],
      "@session/*": [
        "src/session/*"
      ],
      "@types": [
        "src/types"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@fields/*": [
        "src/fields/*"
      ],
      "@fields": [
        "src/fields"
      ],
      "@resources/*": [
        "src/resources/*"
      ],
      "@resources": [
        "src/resources"
      ],
      "@types*": [
        "src/types*"
      ],
      "@/*": [
        "src/*"
      ],
      "@": [
        "src"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.tsx",
    "tests/**/*.ts"
  ],
}