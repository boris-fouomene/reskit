{
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Allow interoperability with CommonJS modules
    "allowJs": true,
    "resolveJsonModule": false,
    "target": "es2020", // Or the desired target
    "module": "node16", // Enables ESM & CJS interop
    "moduleResolution": "node16",
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "declarationMap": false,
    "incremental": false,
    "composite": false,
    "strict": true,
    "noEmitOnError": true,
    "noEmit": false,
    "noLib": false,
    "jsx": "preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"]
  },
  "types": ["jest", "node", "react-native", "react"],
  "exclude": [
    "react-native",
    "node_modules",
    "node_modules/**/*",
    "@resk/core/**/*",
    "packages/resk-core/lib/**/*",
    "docs/**/*",
    "examples/**/*",
    "**/build/**/*",
    "**/dist/**/*",
    "**/*.js"
  ]
}
