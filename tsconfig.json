{
  "compilerOptions": {
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Allow interoperability with CommonJS modules
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ES2015", // Or the desired target
    "module": "ES6", // Enables ESM & CJS interop
    "moduleResolution": "node", // Ensures Node-style resolution
    "removeComments": true,
    "declaration": false,
    "sourceMap": false,
    "declarationMap": false,
    "incremental": false,
    "composite": false,
    "strict": true,
    "noEmitOnError": true,
    "noEmit": false,
    "noLib": false,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": true,
    "types": [
      "jest",
      "node"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
  ],
  "exclude": [
    "./jest.config.js",
    "**/node_modules/**/*",
    "node_modules/**/*",
    "node_modules",
    "**/node_modules/*",
    "**/dist/**/*",
    "**/build/**/*",
    "@resk/**/*",
    "**/dist/*",
    "**/*.spec.ts",
    "**/build/**/*",
    "jest.config.*",
    "generate-typedoc",
    "**.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx"
  ],
}